<!DOCTYPE html>
<html>
  <head>
    <title>Simple Appraisel Management | <%= @page_title || "Admin" %></title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  	<%#= javascript_include_tag "application", "data-turbolinks-track" => true %>
  	<%= csrf_meta_tags %>
  </head>
  <body>
    <div id="header">
      <h1> Appraisel Management System</h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright"></p>
    </div>
  </body>
</html>
